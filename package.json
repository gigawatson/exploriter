{
  "scripts": {
    "watch:alpine": "esbuild ./input.js --outfile=./output.js --bundle --sourcemap --watch",
    "watch:tailwind": "tailwindcss -i ./input.css -o ./output.css --watch",
    "build:alpine": "esbuild ./input.js --outfile=./output.js --bundle --minify",
    "build:tailwind": "tailwindcss -i ./input.css -o ./output.css --minify",
    "watch": "pnpm \"/^watch:.*/\"",
    "build": "pnpm \"/^build:.*/\""
  },
  "devDependencies": {
    "tailwindcss": "^4.1.6"
  },
  "dependencies": {
    "@alpinejs/focus": "^3.14.9",
    "alpinejs": "^3.14.9",
    "esbuild": "^0.25.4",
    "tippy.js": "^6.3.7"
  }
}
